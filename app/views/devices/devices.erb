<h1 style="color: black; margin: 30px 10px;">Hi, <%= current_user.username.capitalize %></h1>

<div class="container" >
  <div class="row">
    <div class="jumbotron" style="background: white; border-radius:20px;">
      <% if flash.has?(:message) %>
      <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <p><%= flash[:message] %> </p>
      </div>
      <% end %>
      <table class="table table-hover table-striped" >
      <tr class="info">
        <th><h3>Serial Number</h3></th>
        <th><h3>Date Created</h3></th>
        <th><h3>Firmware Version</h3></th>
        <th><h3></h3></th>
      </tr>
        <% current_user.devices_sort_by_date.each do |device| %>
          <tr style="text-align:left;">
            <td><a href="devices/<%= device.id %>"><%= device.serial_number %></a></td>
            <td><%= device.created_at %></td>
            <td><%= device.firmware_version %></td>
            <td><a href="devices/<%= device.serial_number %>/sensors">Sensors <span class="glyphicon glyphicon-alert"></span></a></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
